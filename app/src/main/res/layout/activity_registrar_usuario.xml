<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondoregistro"
    android:orientation="vertical"
    android:paddingStart="40dp"
    android:paddingLeft="40dp"
    android:paddingTop="70dp"
    android:paddingEnd="40dp"
    android:paddingRight="40dp"
    android:paddingBottom="40dp"
    tools:context=".RegistrarUsuario">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Registro de Usuario"
        android:textColor="@android:color/darker_gray"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="163dp"
        android:layout_height="130dp"
        android:layout_gravity="center"
        android:padding="20dp"
        app:srcCompat="@drawable/logo3" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"

        android:hint="Nombre"
        android:textColorHint="#D8D1C9C9">

        <EditText
            android:id="@+id/txtnombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorLogo"
            android:ems="10"
            android:inputType="textPersonName"
            android:paddingTop="15dp"
            android:textColor="@color/colorGoogle" />
    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="Correo"
        android:textColorHint="#D8D1C9C9">

        <EditText
            android:id="@+id/txtemail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorLogo"
            android:inputType="textEmailAddress"
            android:paddingTop="15dp"
            android:textColor="@color/colorGoogle" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="Password"
        android:textColorHint="#D8D1C9C9">

        <EditText
            android:id="@+id/txtpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorLogo"
            android:ems="10"
            android:inputType="textPassword"
            android:paddingTop="15dp"
            android:textColor="@color/colorGoogle" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="20dp">

        <Button
            android:id="@+id/btnRegistrar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/botonredondeado"
            android:inputType="text"
            android:text="REGISTRARSE"
            android:textColor="@color/colorGoogle" />
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:gravity="center"
        android:text="Â¿Ya tienes una Cuenta?"
        android:textColor="@color/colorGoogle"

        />

    <TextView
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:paddingTop="10dp"
        android:text="@string/ingreseAqui"
        android:textColor="@color/colorGoogle" />


</LinearLayout>